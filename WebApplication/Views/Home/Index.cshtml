@{
    ViewBag.Title = "Home";
}
<div class="jumbotron">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="row">
                <ul class="nav nav-tabs">
                    <li role="presentation" class="active col-md-6" style="padding-right:0px">
                        <a class="text-center" href="#login" data-toggle="tab">登录</a>
                    </li>
                    <li role="presentation" class="col-md-6" style="padding-left:0px">
                        <a class="text-center" href="#register" data-toggle="tab">注册</a>
                    </li>
                </ul>
            </div>
            <div id="myTabContent" class="tab-content">
                <!-- 登录 -->
                <div class="tab-pane fade in active" id="login">
                    <form>
                        <div class="form-group">
                            <label for="UserName">用户名</label>
                            <input type="text" class="form-control" id="LoginUserName" placeholder="UserName">
                        </div>
                        <div class="form-group">
                            <label for="Password">密码</label>
                            <input type="password" class="form-control" id="LoginPassword" placeholder="Password">
                        </div>
                        <button class="btn btn-default col-md-offset-4" id="Submit">登录</button>
                    </form>
                </div>
                <!-- 注册 -->
                <div class="tab-pane fade" id="register">
                    <form>
                        <div class="form-group">
                            <label for="UserName">用户名</label>
                            <input type="text" class="form-control" id="RegisterUserName" placeholder="UserName">
                        </div>
                        <div class="form-group">
                            <label for="Password">密码</label>
                            <input type="password" class="form-control" id="RegisterPassword" placeholder="Password">
                        </div>
                        <div class="form-group">
                            <label for="Confirm Password">确认密码 </label>
                            <input type="password" class="form-control" id="ConfirmPassword" placeholder="Confirm Password">
                        </div>
                        <div class="form-group">
                            <label for="Phone">手机号 </label>
                            <input type="text" class="form-control" id="Phone" placeholder="Phone">
                        </div>
                        <div class="form-group">
                            <label for="Email">邮箱 </label>
                            <input type="email" class="form-control" id="Email" placeholder="Email">
                        </div>
                        <button class="btn btn-default col-md-offset-4" id="Register">注册</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>